<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义圆角ImageView-->
    <declare-styleable name="MusicRoundImageView">
        <attr name="image_type" />
        <attr name="image_scale" />
        <attr name="image_borderRadius" />
        <attr name="image_top_left" />
        <attr name="image_top_right" />
        <attr name="image_bottom_left" />
        <attr name="image_bottom_right" />
    </declare-styleable>
    <attr name="image_borderRadius" format="dimension" />
    <attr name="image_type">
        <enum name="image_circle" value="0" />
        <enum name="image_round" value="1" />
    </attr>
    <attr name="image_scale">
        <enum name="image_crop" value="0" />
        <enum name="image_fit" value="1" />
    </attr>
    <attr name="image_top_left" format="boolean" />
    <attr name="image_top_right" format="boolean" />
    <attr name="image_bottom_left" format="boolean" />
    <attr name="image_bottom_right" format="boolean" />
    <!--唱片机-->
    <declare-styleable name="MusicJukeBoxBackgroundLayout">
        <attr name="backgroundEnable" format="boolean"/>
    </declare-styleable>
    <!--背景虚化-->
    <declare-styleable name="MusicBackgroungBlurView">
        <attr name="blurBlurRadius" format="dimension"/>
        <attr name="blurDownsampleFactor" format="float"/>
        <attr name="blurOverlayColor" format="color"/>
        <attr name="blurFramRadius" format="dimension"/>
        <attr name="blurTopLeft" format="boolean"/>
        <attr name="blurTopRight" format="boolean"/>
        <attr name="blurBottomLeft" format="boolean"/>
        <attr name="blurBottomRight" format="boolean"/>
    </declare-styleable>
    <!--唱片机-->
    <declare-styleable name="MusicJukeBoxCoverPager">
        <!--旋转一圈耗时,单位秒-->
        <attr name="musicJukeRotationDurtion" format="integer"/>
    </declare-styleable>
    <!--迷你唱片机-->
    <declare-styleable name="MusicJukeBoxViewSmall">
        <!--唱片机是否自行获得焦点-->
        <attr name="musicMiniJukeEnable" format="boolean"/>
        <attr name="musicMiniJukeRotationDurtion" format="integer"/>
    </declare-styleable>
    <!--Title-->
    <declare-styleable name="MusicCommentTitleView">
        <attr name="musicCommentTitle" format="string" />
        <attr name="musicCommentTitleColor" format="color" />
        <attr name="musicCommentTitleSize" format="dimension"></attr>
        <attr name="musicCommentSubTitle" format="string" />
        <attr name="musicCommentSubTitleColor" format="color" />
        <attr name="musicCommentSubTitleSize" format="dimension"></attr>
        <attr name="musicCommentBackRes" format="reference" />
        <attr name="musicCommentMenuRes" format="reference" />
    </declare-styleable>
</resources>